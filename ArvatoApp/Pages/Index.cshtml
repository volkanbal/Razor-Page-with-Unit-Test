@page
@model IndexModel
@{
	ViewData["Title"] = "Customer Support Home";
}

@using (Html.BeginForm(FormMethod.Post)) {
	@Html.AntiForgeryToken()
	<div class="row">
		<div class="card card-primary card-outline col-12">
			<div class="card-header">
				<h3>Customer Support Ticket</h3>
			</div>
			<div class="card-body">
				<div class=row>
					<div class="col-md-6">
						<div class="form-group row ">
							<label class="col-sm-4 col-form-label">Email</label>
							<div class="col-sm-8">
								<input asp-for="Ticket.customerEmail" class="form-control" />
								<span asp-validation-for="Ticket.customerEmail" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group row ">
							<label class="col-sm-4 col-form-label">Phone Number</label>
							<div class="col-sm-8">
								<input asp-for="Ticket.customerPhone" class="form-control" />
								<span asp-validation-for="Ticket.customerPhone" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group row ">
							<label class="col-sm-4 col-form-label">Customer Number</label>
							<div class="col-sm-8">
								<input asp-for="Ticket.customerNumber" class="form-control" />
								<span asp-validation-for="Ticket.customerNumber" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group row ">
							<label class="col-sm-4 col-form-label">Type of inquiry</label>
							<div class="col-sm-8">
								<select asp-for="Ticket.typeOfInquiry" class="form-control">
									<option value="0">Type A</option>
									<option value="1">Type B</option>
									<option value="2">Type C</option>
								</select>
							</div>
						</div>
					</div>
					<div class="col-md-12">
						<label class="col-form-label">Description of the support issue </label>
						<textarea asp-for="Ticket.inquiryDescription" class="form-control"></textarea>
						<span asp-validation-for="Ticket.inquiryDescription" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12">
						<div class="form-group row ">
							<div>
								<input asp-for="Ticket.isTermsAccepted" />
								<label for="Ticket_isTermsAccepted">agreeing to the terms</label>
							</div>

						</div>
						<span class="text-danger">@Html.Raw( ViewData["info"])</span>
						<input type="submit" value="Create a Ticket" class="btn btn-success" />
					</div>
				</div>
			</div>

		</div>
	</div>
}
